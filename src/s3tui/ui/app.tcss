/* ====================================
 * DELETE MODAL STYLES
 * ==================================== */

/* Modal overlay */
DeleteModal {
    align: center middle;
    background: #000000 70%;
}

/* Main dialog container */
#delete-dialog {
    width: 100;
    max-width: 120;
    height: auto;
    min-height: 20;
    max-height: 40;
    background: $background;
    border: solid $primary;
}

/* Delete loading indicator */
#delete-loading {
    height: 100%;
    width: 100%;
    content-align: center middle;
    background: $background;
    color: $primary;
    text-style: none;
    display: none;
}

/* Dialog header */
#delete-dialog-header {
    height: auto;
    width: 100%;
    background: $surface;
    border-bottom: solid $primary 50%;
    padding: 1;
}

/* Dialog content */
#delete-dialog-content {
    padding: 1 2;
    height: auto;
    width: 100%;
}

/* Dialog footer */
#delete-dialog-footer {
    height: auto;
    min-height: 6;
    width: 100%;
    background: $surface;
    border-top: solid $primary 50%;
    padding: 1;
    layout: horizontal;
    content-align: left middle;
}

/* Delete button styling */
.dialog-actions Button.delete-button {
    background: $error;
    border: solid $error;
    color: $background;
}

.dialog-actions Button.delete-button:hover {
    background: $error;
    border: solid $error;
    color: $background;
}

.dialog-actions Button.delete-button:focus {
    background: $error;
    border: solid $error;
    color: $background;
}

/* ====================================
 * HELP MODAL STYLES
 * ==================================== */

/* Modal overlay */
HelpModal {
    align: center middle;
    background: rgba(13, 17, 23, 0.8);
}

/* Main dialog container */
#help-dialog {
    width: 80;
    max-width: 100;
    height: auto;
    max-height: 90%;
    background: #161b22;
    border: solid #30363d;
    padding: 0;
    overflow-y: auto;
}

/* Dialog header */
#help-dialog-header {
    dock: top;
    height: auto;
    background: #21262d;
    border-bottom: solid #30363d;
    padding: 1 2;
}

/* Dialog content */
#help-dialog-content {
    height: 1fr;
    padding: 1 2;
    overflow-y: auto;
    scrollbar-gutter: stable;
}

#help-dialog-content:focus {
    border: solid #58a6ff;
}

/* Help sections */
.help-section {
    height: auto;
    margin-bottom: 1;
}

.help-section-title {
    color: #58a6ff;
    text-style: bold;
    margin-bottom: 1;
}

.help-text {
    color: #c9d1d9;
    margin-bottom: 1;
}

/* Keybindings container */
.help-keybindings {
    height: auto;
    margin-bottom: 1;
}

/* Individual keybinding rows */
.help-keybinding-row {
    height: 3;
    layout: horizontal;
    margin-bottom: 1;
    align: left middle;
}

.help-keybinding-key {
    width: 15;
    height: 3;
    color: #ffd700;
    text-style: bold;
    background: #0d1117;
    border: solid #30363d;
    padding: 0 1;
    content-align: center middle;
    margin-right: 2;
}

.help-keybinding-desc {
    width: 1fr;
    height: 3;
    color: #c9d1d9;
    content-align: left middle;
}


